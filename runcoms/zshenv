# Ensure that a non-login, non-interactive shell has a defined environment.
if [[ "$SHLVL" -eq 1 && ! -o LOGIN && -s "${ZDOTDIR:-$HOME}/.zprofile" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprofile"
fi

export PATH="$HOME/bin:/usr/local/bin:$HOME/local/bin:$HOME/.npm-packages/bin:$HOME/.yarn/bin:/usr/local/sbin:$HOME/bin:/usr/local/bin:$HOME/local/bin:$HOME/.npm-packages/bin:$HOME/.yarn/bin:/usr/local/sbin:$HOME/bin:/usr/local/bin:$HOME/local/bin:$HOME/.npm-packages/bin:$HOME/.yarn/bin:/usr/local/sbin:/Library/Frameworks/Python.framework/Versions/2.7/bin:/Library/Frameworks/Python.framework/Versions/3.5/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$HOME/bin:$HOME/local/bin:$HOME/.npm-packages/bin:$HOME/.yarn/bin:/usr/local/sbin:$HOME/.rvm/bin:$HOME/.fzf/bin:$HOME/.rvm/bin:$HOME/.rvm/bin:$HOME/.rvm/bin:$HOME/golang/bin/:/usr/local/opt/go/libexec/bin/:$HOME/local/bin/funcs:$HOME.fzf/bin"

