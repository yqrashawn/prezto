# Ensure that a non-login, non-interactive shell has a defined environment.
if [[ ( "$SHLVL" -eq 1 && ! -o LOGIN ) && -s "${ZDOTDIR:-$HOME}/.zprofile" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprofile"
fi

export PATH="/Applications/Alacritty.app/Contents/MacOS:$HOME/.cargo/env:$HOME/.cargo/bin:/usr/local/opt/python@2/bin/:/usr/local/lib/node_modules/.bin/:$HOME/.config/yarn/global/node_modules/.bin/:/usr/local/opt/curl/bin:/usr/local/opt/texinfo/bin:$HOME/bin:/usr/local/bin:$HOME/local/bin:$HOME/.npm-packages/bin:/usr/local/sbin:$HOME/bin:/usr/local/bin:$HOME/local/bin:$HOME/.npm-packages/bin:/usr/local/sbin:$HOME/bin:/usr/local/bin:$HOME/local/bin:$HOME/.npm-packages/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/sbin:$HOME/bin:$HOME/local/bin:$HOME/.npm-packages/bin:/usr/local/sbin:$HOME/.rvm/bin:$HOME/.fzf/bin:$HOME/.rvm/bin:$HOME/.rvm/bin:$HOME/.rvm/bin:$HOME/golang/bin/:/usr/local/opt/go/libexec/bin/:$HOME/local/bin/funcs:$HOME/.fzf/bin:/usr/local/anaconda3/bin:/Applications/blender.app/Contents/MacOS:/Applications/Sublime Text.app/Contents/SharedSupport/bin:$HOME/.local/bin:/usr/bin:/bin"

export YQ_MACHINE="macbook"
export YQ_BLOG_DEV_MODE="false"

#source "$HOME/.vim/plugged/gruvbox/gruvbox_256palette.sh"
